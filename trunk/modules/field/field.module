    }
  }
  
  if($module && $type){
    $fetch = pager_query('SELECT * FROM {fields} WHERE module = ? AND type = ?', 10, 0, NULL, array($module, $type));
  }else if($module){
    $fetch = pager_query('SELECT * FROM {fields} WHERE module = ?', 10, 0, NULL, array($module));
  }else{
