/**
 * 节点回调字段验证
 */
function field_get_node_validate($module, $type, $value, $node, $form = NULL){
  if(!$group = module_invoke($module, 'field_call_group', $type)){
    return;
  }
  
  if(!$datas = field_get_cache_field_group($module, $type)) return;
  
  global $conf;
  foreach($datas as $data){
    if(!$data->field_func){
      // 没有自定义处理函数的字段
      if($data->field_module == 'field'){
        $key = 'field_'.$data->field_id;
        switch($data->field_type){
          case 'select': // 单选
            if($value->fields[$key] && $conf['field_term_children'][$data->field_id] && !db_query('SELECT COUNT(field_id) FROM {fields_term} WHERE field_id = ? AND tid = ?', array($data->field_id, $value->fields[$key]), array('return' => 'column'))){
              dd_set_message(t('field', '%string 出现非法选择', array('%string' => $data->name)), 'error');
              return true;
            }
          break;
          case 'selects':
            if($data->required && !$value->fields[$key]){
              dd_set_message(t('field', '%string 不能为空', array('%string' => $data->name)), 'error');
              return true;
            }else if($value->fields[$key] && $conf['field_term_children'][$data->field_id] && db_query('SELECT COUNT(field_id) FROM {fields_term} WHERE field_id != ? AND tid IN ('.db_get_placeholder($value->fields[$key]).')', array_merge(array($data->field_id), $value->fields[$key]), array('return' => 'column'))){
              dd_set_message(t('field', '%string 出现非法选择', array('%string' => $data->name)), 'error');
              return true;
            }
          break;
          case 'tags':
            // 标签
            if($tags = field_get_string_tags($data->field_id, $value->fields[$key])){
            	foreach($tags as $tag){
            		if(mb_strlen($tag, 'utf-8') > 64){
            			$t['field'][$key]['#error'][] = t('field', '%string 的长度不超过 %length 字符', array('%string' => $tag, '%length' => 64));
            			break;
            		}
            	}
            }
          break;
          case 'textfield':
            // 单行文本
        		if($value->fields[$key] && mb_strlen($value->fields[$key], 'utf-8') > 255){
        			$t['field'][$key]['#error'][] = t('field', '%string 的长度不超过 %length 字符', array('%string' => $data->name, '%length' => 255));
        		}
          break;
          case 'textarea':
            // 多行文本
            if($data->data['maxlength'] && $value->fields[$key] && mb_strlen($value->fields[$key], 'utf-8') > $data->data['maxlength']){
        			$t['field'][$key]['#error'][] = t('field', '%string 的长度不超过 %length 字符', array('%string' => $data->name, '%length' => $data->data['maxlength']));
        		}
          break;
          //case 'file': // 上传文件在 submit 环节处理
        }
      }else{
        /**
         * 其它模块定义的类型，模块名_字段类型_call_validate 函数
         */
        $function = $data->field_module.'_'.$data->field_type.'_field_node_validate';
        if(function_exists($function)) $t = $function($data, $value, $node, $form);
      }
    }else{
      $t = $data->field_func('validate', $data, $node, $form, $value);
    }
  }
  return $t;
}

/**
 * 节点回调显示
 */
function field_get_node_view($module, $type, &$node){
  if(!$datas = field_get_cache_field_group($module, $type)) return;
  
  global $conf;
  foreach($datas as $data){
    
    if(!$node->fields[$data->field_id]) continue;
    
    if(!$data->field_func){
      // 没有自定义处理函数的字段
      if($data->field_module == 'field'){
        switch($data->field_type){
          case 'select':  case 'radio':
            $node->field_view['category'][$data->field_id] = array(
              '#content' => l($node->fields[$data->field_id]->name, 'category/'.$node->fields[$data->field_id]->tid),
              '#name' => $data->name
            );
          break;
          case 'checkbox': case 'selects':
            $term = $content = NULL;
            foreach($node->fields[$data->field_id] as $term){
              $content .= l($term->name, 'category/'.$term->tid);
            }
            $node->field_view['category'][$data->field_id] = array(
              '#content' => $content,
              '#name' => $data->name
            );
          break;
          case 'tags':
            $term = $content = NULL;
            foreach($node->fields[$data->field_id] as $term){
              $content .= l($term->name, 'category/'.$term->tid);
            }
            $node->field_view['tags'][$data->field_id] = array(
              '#content' => $content,
              '#name' => $data->name
            );
          break;
          case 'textfield':
            $node->field_view['textfield'][$data->field_id] = array(
              '#content' => check_pain($node->fields[$data->field_id]->text),
              '#name' => $data->name
            );
          break;
          case 'textarea':
            $node->field_view['textarea'][$data->field_id] = array(
              '#content' => filter_view($node->fields[$data->field_id]->text, $data->data['format']),
              '#name' => $data->name
            );
          break;
          case 'file':
            $content = NULL;
            foreach($node->fields[$data->field_id] as $file){
              $content .= l(img(image_get_thumb($file->fid, $file->filepath, $data->data['thumbs']['medium'])), f($file->filepath), array('html' => 1, 'attributes' => array('target' => '_blank')));
            }
            $node->field_view['file'][$data->field_id] = array(
              '#content' => $content, '#name' => $data->name
            );
        }
      }else{
        /**
         * 其它模块定义的类型，模块名_字段类型_call_view 函数
         */
        $function = $data->field_module.'_'.$data->field_type.'_field_node_view';
        if(function_exists($function)) $t = $function($data, $node);
      }
    }else{
      $data->field_func('view', $data, $node);
    }
  }
}

/**
 * 节点回调字段保存
 */
function field_get_node_save($module, $type, $value, $node = NULL, $form = NULL){
  if(!$value->nid) return false;
  if(!$group = module_invoke($module, 'field_call_group', $type)){
    return;
  }
  
  if(!$datas = field_get_cache_field_group($module, $type)) return;
  
  global $conf;
  $cids = $tids = array();
  foreach($datas as $data){
    
    if(!field_access('update', $data, $node)){
      continue;
    }
    if(!$data->field_func){
      $key = 'field_'.$data->field_id;
      // 没有自定义处理函数的字段
      if($data->field_module == 'field'){
        switch($data->field_type){
          case 'radio': case 'select':
            $field_ids[$data->field_id] = $data->field_id;
            
            if($value->fields[$key]) $cids[] = $value->fields[$key];
          break;
          case 'checkbox': case 'selects':
            $field_ids[$data->field_id] = $data->field_id;
            if($value->fields[$key]) $cids = array_merge($cids, $value->fields[$key]);
          break;
          case 'tags':
            $field_ids[$data->field_id] = $data->field_id;
            
            if($tags = field_get_string_tags($data->field_id, $value->fields[$key])){
          		foreach($tags as $tag){
                if($node->fields[$data->field_id]){
                  if(in_array($tag, $node->fields[$data->field_id])){
                    $tids[] = $tid;
                    continue;
                  }
                }
          			if($tid = db_query('SELECT tid FROM {fields_term} WHERE name = ? AND field_id = ?', array($tag, $data->field_id), array('return' => 'column'))){
          				$tids[] = $tid;
          			}else if(db_exec('INSERT INTO {fields_term} (field_id, name, pid, weight) VALUES (?, ?, 0, 0)', array($data->field_id, $tag))){
          				$tid = db_last_insert_id();
          				$tids[] = $tid;
          			}
          		}
            }
          break;
          case 'textfield':
            db_exec('DELETE FROM {fields_small} WHERE nid = ? AND field_id = ?', array($value->nid, $data->field_id));
            if($value->fields[$key]){
              db_exec('INSERT INTO {fields_small} (nid, field_id, text) VALUES (?, ?, ?)', array($value->nid, $data->field_id, $value->fields[$key]));
            }
          break;
          case 'textarea':
            db_exec('DELETE FROM {fields_long} WHERE nid = ? AND field_id = ?', array($value->nid, $data->field_id));
            if($value->fields[$key]){
              db_exec('INSERT INTO {fields_long} (nid, field_id, text) VALUES (?, ?, ?)', array($value->nid, $data->field_id, $value->fields[$key]));
            }
          break;
          case 'file':
            if($_FILES['fields'] && $_FILES['fields']['name'][$key]){
              $validate = array(
                'filetype' => $data->data['filetype'],
                'savepath' => $data->data['savepath'],
                'filesize' => $data->data['filesize']
              );
              if(is_array($_FILES['fields']['name'][$key])){
                $files = 0;
                foreach($_FILES['fields']['name'][$key] as $i => $name){
                  if($i > $data->data['multi']) break;
                  if(!$message = file_validate_error($_FILES['fields']['error'][$key][$i])){
                    $file = array(
                      'name' => $name,
                      'type' => $_FILES['fields']['type'][$key][$i],
                      'size' => $_FILES['fields']['size'][$key][$i],
                      'tmp_name' => $_FILES['fields']['tmp_name'][$key][$i],
                      'ext_id' => $data->field_id, // 字段id
                      'ext_id2' => $value->nid, // 节点id
                      'ext_type' => 'field_file' // 扩展标记
                    );
                    if(file_save_upload($file, $validate)){
                      ++$files;
                    }
                  }else if($message !== 4){
                    dd_set_message($message, 'error');
                  }
                }
                if($node->fields[$data->field_id]){
                  $k = $files + count($node->fields[$data->field_id]) - $data->data['multi'];
                  if($k > 0){
                    foreach($node->fields[$data->field_id] as $file){
                      if($k == 0) break;
                      file_delete($file->fid, 1, $file->filepath);
                      --$k;
                    }
                  }
                }
              }else{
                if($node->fields[$data->field_id]){
                  foreach($node->fields[$data->field_id] as $file){
                    file_delete($file->fid, 1, $file->filepath);
                  }
                }
                if(!$message = file_validate_error($_FILES['fields']['error'][$key])){
                  $file = array(
                    'name' => $_FILES['fields']['name'][$key],
                    'type' => $_FILES['fields']['type'][$key],
                    'size' => $_FILES['fields']['size'][$key],
                    'tmp_name' => $_FILES['fields']['tmp_name'][$key],
                    'ext_id' => $data->field_id,
                    'ext_id2' => $value->nid,
                    'ext_type' => 'field_file'
                  );
                  file_save_upload($file, $validate);
                }else if($message !== 4){
                  dd_set_message($message, 'error');
                }
              }
            }
          break;
        }
      }else{
        /**
         * 其它模块定义的类型，模块名_字段类型_call_save 函数
         */
        $function = $data->field_module.'_'.$data->field_type.'_field_node_save';
        if(function_exists($function)) $function($data, $value, $node, $form);
      }
    }else{
      $data->field_func('save', $data, $node, $form, $value);
    }
  }
  
  if($value->nid && $field_ids){
    db_exec('DELETE FROM {fields_term_node} WHERE nid = ? AND tid IN (SELECT tid FROM {fields_term} WHERE field_id IN ('.db_get_placeholder($field_ids).'))',  array_merge(array($value->nid), $field_ids));
	}
  
	if($tids){
		$cids = array_merge($cids, $tids);
	}
  
	if($cids){
		foreach($cids as $cid){
			$nids[] = '('.$cid .','.$value->nid.')';
		}
		db_exec('INSERT INTO {fields_term_node} (tid, nid) VALUES '. implode(',', $nids));
	}
}

function field_get_node_delete($module, $type, $node){
  if($node->fields){
    if(!$datas = field_get_cache_field_group($module, $type)) return;
    foreach($node->fields as $field_id => $fields){
      if(!$datas[$field_id]->field_func){
        // 没有自定义处理函数的字段
        if($datas[$field_id]->field_module == 'field'){
          switch($data->field_type){
            case 'radio': case 'select': case 'checkbox': case 'selects': case 'tags':
              db_exec('DELETE fields_term_node FROM {fields_term_node} INNER JOIN {fields_term} ON fields_term_node.tid = fields_term.tid WHERE fields_term_node.nid = ? AND fields_term.field_id = ?', array_merge($node->nid, $field_id));
            break;
            case 'textfield':
              db_exec('DELETE FROM {fields_small} WHERE nid = ? AND field_id = ?', array($node->nid, $field_id));
            break;
            case 'textarea':
              db_exec('DELETE FROM {fields_long} WHERE nid = ? AND field_id = ?', array($node->nid, $field_id));
            break;
            case 'file':
              if($fields){
                foreach($fields as $file){
                  file_delete($file->fid, 1, $file->filepath);
                }
              }
            break;
          }
        }else{
          /**
           * 其它模块定义的类型，模块名_字段类型_call_save 函数
           */
          $function = $data->field_module.'_'.$data->field_type.'_field_node_delete';
          if(function_exists($function)) $function($datas[$field_id], $node);
        }
      }else{
        $data->field_func('delete', $datas[$field_id], $node);
      }
    }
  }
}

/**
 * 字符串解析为标签，以“,”或“，”为分隔符
 */
function field_get_string_tags($id, $text){
  static $tags;
  if(!isset($tags[$id])){
    $text = str_replace('，', ',', $text);
    if(strpos($text, ',') !== false){
      foreach(explode(',', $text) as $tag){
        if($tag =  trim($tag)){
          $tags[$id][] = $tag;
        }
      }
      $tags[$id] = array_unique($tags[$id]);
    }else if($text = trim($text)){
      $tags[$id][] = $text;
    }
  }
  return $tags[$id];
}

