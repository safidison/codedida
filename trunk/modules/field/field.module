/**
 * 分类验证、保存
 */
function field_term_form_validate($form, $v){
  if($field = field_load($v['field_id'])){
    $term = (object)$v;
    /**
     * 1、触发自定义验证 hook_field_call_term_validate()
     * 2、调用 field_save_term() 保存数据
     * 3、触发自定义保存 hook_field_call_term_save()
     */
    if($term = field_save_term($field, $term)){
      module_invoke_all('field_call_term_save', $field, $term);
      field_set_cache_term();
      dd_set_message(t('field', '操作成功'));
    }else{
      return true;
    }
    
  }else{
    dd_set_message(t('field', '不正确的字段'));
    return true;
  }
}

/**
 * 保存分类数据，若存在则更新
 */
function field_save_term($field, $term, $batch = 0){
  if($error = module_invoke_all('field_call_term_validate', $field, $term)){
    dc_set_message(implode('<br />', dd_array_multi2single($error)), 'error');
    return false;
  }
  if(mb_strlen($term->name, 'utf-8') > 64){
		dc_set_message(t('field', '名称长度不超过 75 个字符'), 'error');
		return false;
  }
	if(!$group = module_invoke($field->module, 'field_call_group', $field->type)){
    dd_set_message(t('field', '字段组不存在'), 'error');
    return false;
  }
  
	if(!field_term_is_level($term->pid, $group['level'])){
		dd_set_message(t('field', '层级深度已超过限制，添加失败'), 'error');
		return false;
	}
  
  if(!$term->field_id) $term->field_id = $field->field_id;
  
  if($term->tid){
    if(!db_query('SELECT tid FROM {fields_term} WHERE field_id = ? AND name = ? AND tid != ?', array($field->field_id, $term->name, $term->tid), array('return' => 'column'))){
      return field_update_term($term);
    }else{
      dd_set_message(t('field', '%string 已经存在', array('%string' => $term->name)), 'error');
      return false;
    }
  }
  
  if($batch){
    static $data;
    if(!isset($data[$term->field_id])){
      $data[$term->field_id] = array($term->pid => array());
      if($fetch = db_query('SELECT pid, name FROM {fields_term} WHERE field_id = ?', array($term->field_id))){
        foreach($fetch as $o){
          $data[$term->field_id][$o->pid][] = $o->name;
        }
      }
    }
    if($data[$term->field_id] && in_array($term->name, $data[$term->field_id][$term->pid])){
      return field_update_term($term);
    }else{
      return field_insert_term($term);
    }
  }else if(!db_query('SELECT tid FROM {fields_term} WHERE field_id = ? AND name = ?', array($field->field_id, $term->name), array('return' => 'column'))){
    return field_insert_term($term);
  }else{
    dd_set_message(t('field', '%string 已经存在', array('%string' => $term->name)), 'error');
    return false;
  }
}

/**
 * 写入分类数据
 */
function field_insert_term($term){
  if(!$term->weight) $term->weight = 0;
  if(!$term->pid) $term->pid = 0;
  if(!$term->description) $term->description = '';
  if(db_exec('INSERT INTO {fields_term} (pid, field_id, weight, name, description) VALUES (?, ?, ?, ?, ?)', array($term->pid, $term->field_id, $term->weight, $term->name, $term->description))){
    if($term->tid = db_last_insert_id()) return $term;
  }
}

/**
 * 更新分类数据
 */
function field_update_term($term){
  if(!$term->weight) $term->weight = 0;
  if(!$term->pid) $term->pid = 0;
  if(!$term->description) $term->description = '';
  if(db_exec('UPDATE {fields_term} SET pid = ?, weight = ?, name = ?, description = ? WHERE tid = ?', array($term->pid, $term->weight, $term->name, $term->description, $term->tid), array('return' => 1))){
    return $term;
  }
}

/**
 * 批量写入传统型分类字段(即 field_get_term_type())
 */
function field_batch_save_term(&$field, $pid = 0, $data = array(), $message = 1){
  if(!$data) return false;
  foreach($data as $term){
    if(is_array($term)){
      if($term['name']){
        if($t = field_save_term($field, (object)array('pid' => $pid, 'name' => $term['name'], 'weight' => $term['weight']), 1)){
          if($message) dd_set_message(t('field', '%string 添加成功', array('%string' => $t->name)));
          if($term['childrens'] && is_array($term['childrens'])){
            field_batch_save_term($field->field_id, $t->tid, $term['childrens'], $message);
          }
        }
      }
    }else if(field_save_term($field, (object)array('pid' => $pid, 'name' => $term), 1)){
      if($message) dd_set_message(t('field', '%string 添加成功', array('%string' => $term)));
    }
  }
  return true;
}

/**
 * @Implement of hook_field_call_validate()
 *  添加\更新字段通过基本验证后回调
 * @return
 *  返回 array 或 false。array 包含一组错误信息，阻止操作。false 则表示通过验证
 */

function field_field_call_validate(&$field){
  if($field->field_type == 'file'){
    if(strpos($field->data['filetype'], '|') !== false){
      $field->data['filetype'] = explode('|', $field->data['filetype']);
    }else if($field->data['filetype']){
      $field->data['filetype'] = array($field->data['filetype']);
    }
    if($field->data['filesize'] && !is_numeric($field->data['filesize'])){
      dd_set_message(t('field', '文件大小只能是数字'), 'error');
      return true;
    }
  }
}

